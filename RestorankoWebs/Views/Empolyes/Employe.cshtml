@model List<EmployeeViewModel>

@{
    ViewBag.Title = "Upravljanje zaposlenicima";
}

<h2>Upravljanje zaposlenicima</h2>
@*
@if (Model.Count == 0)
{
    <p>Trenutno nema dostupnih zaposlenika.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Ime</th>
                <th>Prezime</th>
                <th>Odjel</th>
                <th>Radno mjesto</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Department</td>
                    <td>@employee.JobTitle</td>
                    <td>
                        <a href="@Url.Action("Edit", "Employee", new { id = employee.Id })">Uredi</a>
                        <a href="@Url.Action("Delete", "Employee", new { id = employee.Id })">Obriši</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a href="@Url.Action("Create", "Employee")" class="btn btn-primary">Dodaj novog zaposlenika</a>
