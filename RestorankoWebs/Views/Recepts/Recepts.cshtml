                    {
                        <li>@ingredient</li>
                    }
                </ul>
                <p>Upute:</p>
                <ol>
                    @foreach (var step in recipe.Instructions)
                    {
                        <li>@step</li>
                    }
                </ol>
            </li>
        }
    </ul>
}
